{

  "manifest_version": 2,
  "name": "Ethical Shopper",
  "short_name": "Ethical Shopper",
  "version": "1.0",
  "author": "Muzzammil Mehdi",
  "homepage_url": "https://github.com/muzilos/ethical-shopper-firefox-extension",

  "description": "Offers helpful functions to aid in the shopping experience.",

  "icons": {
    "48": "icons/1f6d2-48.png"
  },

  "content_scripts": [{
    "matches": ["*://*.amazon.com/*"],
    "js": ["shopper.js"]
  }],

  "applications": {
    "gecko": {
      "id": "{8f37edbd-cdf5-4d0a-84af-d277f3f8bebd}"
    }
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"]


}